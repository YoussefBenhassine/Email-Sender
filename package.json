{
  "name": "email-sender",
  "productName": "Email Sender Pro",
  "version": "1.0.1",
  "description": "Professional Email Sender with Bulk Email Capabilities",
  "main": ".vite/build/main.js",
  "homepage": "https://github.com/YoussefBenhassine/Email-Sender",
  "repository": {
    "type": "git",
    "url": "https://github.com/YoussefBenhassine/Email-Sender.git"
  },
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "vite build --config vite.main.config.mjs",
    "dist": "electron-builder --publish=always",
    "dist:win": "electron-builder --win --publish=always",
    "dist:win-dev": "electron-builder --win",
    "release": "npm run build && npm run dist",
    "deploy": "node scripts/deploy.js",
    "deploy:patch": "node scripts/deploy.js patch",
    "deploy:minor": "node scripts/deploy.js minor",
    "deploy:major": "node scripts/deploy.js major"
  },
  "keywords": [
    "email",
    "bulk-email",
    "electron",
    "desktop-app"
  ],
  "author": "SETUP",
  "license": "MIT",
  "build": {
    "appId": "com.emailsender.pro",
    "productName": "Email Sender Pro",
    "directories": {
      "output": "dist"
    },
    "files": [
      ".vite/build/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/logo.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Email Sender Pro",
      "installerIcon": "assets/logo.ico",
      "uninstallerIcon": "assets/logo.ico",
      "installerHeaderIcon": "assets/logo.ico"
    },
    "publish": {
      "provider": "github",
      "owner": "YoussefBenhassine",
      "repo": "Email-Sender",
      "private": false,
      "releaseType": "release",
      "publishAutoUpdate": true
    },
    "afterSign": "scripts/notarize.js"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.8.3",
    "@electron-forge/maker-rpm": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.3",
    "@electron-forge/plugin-fuses": "^7.8.3",
    "@electron-forge/plugin-vite": "^7.8.3",
    "@electron/fuses": "^1.8.0",
    "@electron/notarize": "^2.5.0",
    "electron": "37.2.6",
    "electron-builder": "^23.6.0",
    "electron-log": "^5.4.2",
    "vite": "^5.4.19"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^10.1.0",
    "electron-updater": "^6.6.2",
    "nodemailer": "^7.0.5",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "xlsx": "^0.18.5"
  }
}
